<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="640dp"
    android:layout_height="360dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_overlay">

        <LinearLayout
            android:id="@+id/button_back_sharing"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15.5dp"
            android:background="@drawable/bg_menu"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_back_sharing" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73.3dp"
            android:layout_marginTop="45dp">

            <ImageView
                android:id="@+id/image_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_start_sharing" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/invitation"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/check_bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/icn_check_bigger"
            android:visibility="gone" />

        <Button
            android:id="@+id/status_sharing_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounded_button"
            android:gravity="center_horizontal"
            android:paddingBottom="6dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:text="@string/sharing_anchor"
            android:textColor="#4b279f"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="246dp"
            tools:ignore="ContentDescription, ButtonStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/host_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/host"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/guest_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/guest"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/cancel"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/try_button"
                    android:layout_width="144dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/bg_guest_host_button"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/try_message"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:progress="0"
                android:progressDrawable="@drawable/rotate_progress_bar"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/spinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/loading"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>