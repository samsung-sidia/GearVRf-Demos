<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="500dp">

    <LinearLayout
        android:id="@+id/menuHud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/btn_fetchball"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_functions_buttons"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_ball" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_shareanchor"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_functions_buttons"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_share_anchor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_edit"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_functions_buttons"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_camera"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_functions_buttons"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_photo" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginTop="235dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_menu"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_menu"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20.5dp"
                android:layout_height="20.5dp"
                android:src="@drawable/icon_menu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_menu"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
